<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121">

    <TextView
        android:id="@+id/first_time_main_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:gravity="start"
        android:text="text"
        android:textAlignment="viewStart"
        android:textSize="64dp"
        android:textColor="#efeae6"
        android:textStyle="bold"
        android:breakStrategy="simple"
        android:hyphenationFrequency="none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/first_time_desc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="text"
        android:textColor="#efeae6"
        android:breakStrategy="simple"
        android:hyphenationFrequency="none"
        android:textSize="18dp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/first_time_main_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/first_time_name_entry"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:gravity="center"
        android:hint="What's your name?"
        android:textColorHint="#686868"
        android:textColor="#efeae6"
        android:textSize="18sp"
        android:layout_marginBottom="256dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#A9A9A9"
        app:layout_constraintTop_toBottomOf="@id/first_time_name_entry"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/first_time_begin_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Begin"
        android:textSize="18sp"
        android:backgroundTint="#fff1e6"
        android:textColor="#212121"
        android:gravity="center"
        android:layout_marginTop="256dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:visibility="gone"
        />



</androidx.constraintlayout.widget.ConstraintLayout>