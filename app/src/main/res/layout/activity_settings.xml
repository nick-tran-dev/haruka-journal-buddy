<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    tools:context=".SettingsActivity">

    <TextView
        android:id="@+id/setting_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="12dp"
        android:layout_gravity="start"
        android:gravity="start"
        android:textAlignment="viewStart"
        android:singleLine="true"
        android:ellipsize="end"
        android:text="Settings"
        android:textSize="42dp"
        android:textColor="#efeae6"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/namechange_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:text="Change name"
        android:textSize="18sp"
        android:textColor="#efeae6"
        android:textStyle="bold"
        android:ellipsize="end"
        android:singleLine="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setting_title"
        app:layout_constraintEnd_toStartOf="@+id/namechange_edit"
        app:layout_constraintWidth_percent="0.4" />

    <EditText
        android:id="@+id/namechange_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="32dp"
        android:background="@android:color/transparent"
        android:hint="Your new name here"
        android:textColorHint="#686868"
        android:gravity="end"
        android:maxLines="1"
        android:textColor="#efeae6"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="@+id/namechange_text"
        app:layout_constraintStart_toEndOf="@+id/namechange_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>